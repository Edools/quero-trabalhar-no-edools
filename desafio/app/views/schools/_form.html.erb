<%= form_for(@school) do |f| %>
<%= render 'shared/erros', object: @school %>
<p>
  <%= f.label :nome, "Nome da Escola" %><br />
  <%= f.text_field :nome%>
</p>
<p>
  <%= f.label :email_dono, "Email do Dono" %><br />
  <%= f.email_field :email_dono%>
</p>

<p>
  <%= f.label :pitch, "Apresentação" %><br />
  <%= f.text_area :pitch%>
</p>

<p>
  <%= f.label :sub_dominio, "Subdomínio" %><br />
  <%= f.text_field :sub_dominio%>
</p>

<p>
  <%= f.label :data_criacao, "Data de Criação" %><br />
  <%= f.date_field :data_criacao%>
</p>

<%= link_to_add_association 'Adicionar curso', f, :courses,
'data-association-insertion-none' => "#courses-school ol",
'data-association-insertion-method' => "append"%>

<%= f.button "Cadastrar Escola"%>

<% end %>
