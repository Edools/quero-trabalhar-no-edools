<div class="well">
  <strong>Nome da Escola: </strong> <%= @school.nome %><br>
  <strong>Curso oferecidos: </strong>
  <% for course in @school.courses %>
    <%= link_to course.titulo, course_path(course.id)%> |
  <% end %>
  <br>
  <hr>
  <%= link_to "Editar", edit_school_path(@school.id), class:"btn btn-warning" %> |
  <%= link_to 'Excluir',  @school,  method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-danger" %>
</div>
 <hr>
