        <td><%= link_to 'Ver', escola_curso_path(curso.escola, curso) %></td>
        <td><%= link_to 'Editar', edit_escola_curso_path(curso.escola, curso) %></td>
        <td><%= link_to 'Deletar', escola_curso_path(curso.escola, curso), method: :delete, data: { confirm: 'Voce tem certeza que deseja deletar?' } %></td>
