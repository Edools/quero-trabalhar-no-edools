<div class="container">
    <div class="lesson"> 
      <% if @ownerSchool %>
      <div class="col-md-10 col-md-offset-1">
        <div class="row">
          <div class="col-md-6 text-center">
          	<%= link_to 'Editar', edit_course_lesson_path(@course, @lesson) %>
             
          </div>
          <div class="col-md-6 text-center">
            <div style="opacity: 0.3;">Novo</div>
          </div>  
        </div>
        <hr>
      <%end%>


      <div class="box">
        <div class="row">
        <div class="col-md-10 col-md-offset-1">
        <h3 class="text-center"> <%= @lesson.course.title %> - <%= @lesson.title %></h3>
        <p>
          <strong>Description:</strong>
          <%= @lesson.description %>
        </p>

        <br>

        <% if current_user.school %>
        <h4 class="text-center"> <%= link_to 'Voltar', school_path(current_user.school) %></h4>
        <%else%>
        <h4 class="text-center"> <%= link_to 'Voltar', course_lessons_path(params[:course_id]) %></h4>
        <%end%>
        </div> <!-- End-Col-md-10-->
      </div> <!-- End-Row-->
      </div> <!-- End- Box-->

    </div> <!-- End-col-md-10 -->
    
    </div> <!-- lesson -->
</div>
