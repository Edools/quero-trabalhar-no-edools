            <tr>
                <th>#</th>
                <th>Nome</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @alunos.each do |aluno| %>
            <tr>
                <td><%= aluno.id %></td>
                <td><%= aluno.nome %></td>
