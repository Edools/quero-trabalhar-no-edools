<p id="notice"><%= notice %></p>

<h1>CRUD Alunos</h1>

 <table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Status</th>
      <th><%=t '.actions', :default => 'Ações' %></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each.with_index do |aluno,index| %>
      <tr>
        <td scope="row"><%= index+1 %></td>
        <td><%= aluno.nome %></td>
        <td><%= aluno.matricula %></td>
        <td><%= aluno.status == 1 ? 'ATIVO' : 'INATIVO' %></td>
        <td>
            <%= link_to 'Show', aluno %>
            <%= link_to image_tag('edit.png'), edit_aluno_path(aluno), :class => 'quick-edit', :title => 'editar' %>
            <%= link_to image_tag('delete.png'), aluno, method: :delete, data: { confirm: 'Você tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
<%= link_to 'Novo Aluno', new_aluno_path,
    :class => 'btn btn-primary btn-sm active' %>
</div>
