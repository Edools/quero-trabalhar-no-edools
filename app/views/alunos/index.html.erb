                <td><%= link_to 'Editar', edit_aluno_path(aluno) %></td>
                <td><%= link_to 'Apagar', aluno_path(aluno), method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
