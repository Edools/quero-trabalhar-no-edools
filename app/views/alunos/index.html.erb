<div class="container">

    <%= link_to 'Voltar para Escola', escola_path(@escola), class: 'btn btn-default' %>
    <%= link_to 'Novo aluno', new_escola_aluno_path(@escola), class: 'btn btn-success' %>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @alunos.each do |aluno| %>
            <tr>
                <td><%= aluno.id %></td>
                <td><%= aluno.nome %></td>
                <td><%= link_to 'Exibir', escola_aluno_path(@escola,aluno) %></td>
                <td><%= link_to 'Editar', edit_escola_aluno_path(@escola,aluno) %></td>
                <td><%= link_to 'Apagar', escola_aluno_path(@escola,aluno), method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
