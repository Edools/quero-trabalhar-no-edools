<div class="medium-6 medium-offset-3">
  <%= simple_form_for(@course) do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.association :school %>
      <%= f.input :description %>
      <%= f.input :content %>
      <%= f.input :duration %>
      <%= f.input :price %>
    </div>

    <div class="form-actions">
      <%= f.button :submit,  t('save') %>
    </div>
<% end %>
