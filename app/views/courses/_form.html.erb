<%= form_for(course) do |f| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <div class="col-sm-6">
      <%= f.label :title, :class => "control-label" %>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :school_id, :class => "control-label" %>
      <%= f.collection_select :school_id, School.all, :id, :name, {:prompt => true}, { :class => "form-control"} %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :description, :class => "control-label" %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :content, :class => "control-label" %>
    <%= f.text_area :content, :class => "form-control" %>
  </div>

  <div class="row form-group">
    <div class="col-sm-4 row">
      <div class="col-sm-12">
        <%= f.label :duration, :class => "control-label" %>
      </div>
      <div class="col-sm-4">
        <%= f.number_field :duration, :class => "form-control"  %>
      </div>
      <div class="col-sm-6">
        <%= f.select :periodicity, Course.periodicities, {:include_blank => "----"}, {:class => "form-control"} %>
      </div>
    </div>

    <div class="col-sm-3">
      <%= f.label :price, :class => "control-label" %>
      <%= f.number_field :price, :class => "form-control" %>
    </div>
  </div>




  <div class="actions form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
