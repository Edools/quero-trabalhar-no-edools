<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<%= form_tag(search_by_school_courses_path, method: "get", remote: true) do %>
  <%= label_tag(:name, "Buscar por escola:") %>
  <%= select_tag 'school_id', options_from_collection_for_select(@schools, :id, :name, 1) %>
  <%= submit_tag("Search") %>
<% end %>

<ol id='matches_list'>
</ol>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th>Duration</th>
      <th>Active students</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.content %></td>
        <td><%= course.duration %></td>
        <td><%= course.active_students %></td>
        <td><%= course.price %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
