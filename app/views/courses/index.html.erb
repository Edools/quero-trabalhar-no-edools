<div class="well">
  <h1><%= t('helpers.titles.listing', {model: Course.model_name.human})%></h1>
</div>
<%= link_to t('helpers.links.new', {model: Course.model_name.human}), new_course_path, class: 'pull-right btn btn-primary' %>
<br />
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Course.human_attribute_name('title')%></th>
        <th><%= Course.human_attribute_name('school')%></th>
        <th><%= Course.human_attribute_name('duration')%></th>
        <th><%= Course.human_attribute_name('active_students')%></th>
        <th><%= Course.human_attribute_name('price')%></th>
        <th><%= Course.human_attribute_name('created_at')%></th>        
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <%= render @courses%>
    </tbody>
  </table>
</div>
