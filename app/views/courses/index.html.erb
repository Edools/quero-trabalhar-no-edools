<div id="tt1" class="mdl-grid mdl-cell--10-offset">
    <%= link_to new_course_path, method: :get, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" do %>
      <i class="material-icons">add</i>
      <div class="mdl-tooltip mdl-tooltip--left" for="tt1">
        Adicionar Novo Curso
      </div>
    <% end %>
  </div>

<div class="demo-grid-ruler "> 
    <table class="mdl-cell mdl-cell--12-col mdl-data-table mdl-js-data-table mdl-shadow--2dp">
      <thead>
        <tr>
          <th class="mdl-data-table__cell--non-numeric">
            Nome do Curso
          </th>          
          <th>Breve descrição</th>
          <th>Duração</th>
          <th>Preço</th>
          <th>Data de Criação</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td class="mdl-data-table__cell--non-numeric">
              <%= course.title %>
            </td>            
            <td><%= truncate(course.description) %></td>
            <td><%= course.duration %></td>
            <td><%= course.price %></td>
            <td><%= l course.created_at, format: :custom %></td>
            <td>
              <%= link_to "Visualizar", course_path(course), method: :get, class: "mdl-button mdl-js-button mdl-button--primary" %>
              <%= link_to "Editar", edit_course_path(course), method: :get, class: "mdl-button mdl-js-button mdl-button--primary" %>
              <%= link_to "Remover", course_path(course), method: :delete, class: "mdl-button mdl-js-button mdl-button--accent" %>
            </td>
          </tr>
        <% end %>  
      </tbody>
    </table>
</div>