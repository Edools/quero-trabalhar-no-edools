<h1>Cursos</h1>

<%= link_to 'Novo curso', new_school_course_path(@school), class: 'btn btn-primary btn-xs' %>
<hr>

<div class="row">
  <div class="col-lg-12">
    <%= form_tag school_courses_path, method: :get, class: 'input-group' do %>
      <%= text_field_tag :title, params[:title], class: 'form-control', placeholder: 'Digite o nome do curso' %>
      <span class="input-group-btn">
        <%= submit_tag 'Search', name: nil, class: 'btn btn-primary btn-block' %>
      </span>
    <% end %>
  </div>
</div>

<br>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Título</th>
        <th>Conteúdo</th>
        <th>Duração</th>
        <th>Preço</th>
        <th>Estudantes ativos</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.title, school_course_path(@school, course) %></td>
          <td><%= course.content %></td>
          <td><%= l(course.duration) %></td>
          <td><%= course.price %></td>
          <td><%= course.active_students %></td>
          <td>
            <div class="btn-group">
              <%= link_to 'Editar', edit_school_course_path(@school, course), class: 'btn btn-sm btn-default' %>
              <%= link_to 'Apagar', school_course_path(@school, course), method: :delete, class: 'btn btn-sm btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
