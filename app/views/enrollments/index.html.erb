<h1>Enrollments</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Course</th>
      <th>Student</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.course %></td>
        <td><%= enrollment.student %></td>
        <td><%= enrollment.status %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @enrollments %>

<br>

<%= link_to 'New Enrollment', new_enrollment_path, :class => "btn btn-primary" %>
