<div class="container">
  
    <h1>Alunos Ativos/Inativos</h1>

    <div class="row">
        <div class="col-sm-6">
            <table class="table table-striped">
		<caption>Alunos Ativos</caption>
                <tr>
                    <th>Nome</th>
                    <th>Curso</th>
                </tr>
    
                <% @ativos.each do |aluno| %>
                <tr>
                    <td><%= aluno.nome %></td>
                    <td><%= aluno.cursos.pluck(:titulo).join(" / ")%></td>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col-sm-6">
            <table class="table table-striped">
		<caption>Alunos Inativos</caption>
                <tr>
                    <th>Nome</th>
                </tr>
    
                <% @inativos.each do |aluno| %>
                <tr>
                    <td><%= aluno.nome %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>

</div>
