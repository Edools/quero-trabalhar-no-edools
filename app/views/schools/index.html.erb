<h1>Escolas</h1>

<%= link_to 'Nova escola', new_school_path, class: 'btn btn-primary btn-xs' %>
<hr>

<div class="row">
  <div class="col-lg-12">
    <%= form_tag schools_path, method: :get, class: 'input-group' do %>
      <%= text_field_tag :name, params[:name], class: 'form-control', placeholder: 'Digite o nome da escola' %>
      <span class="input-group-btn">
        <%= submit_tag 'Search', name: nil, class: 'btn btn-primary btn-block' %>
      </span>
    <% end %>
  </div>
</div>

<br>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail do dono</th>
        <th>Pitch</th>
        <th>Subdom√≠nio</th>
        <th>Alunos ativos</th>
        <th>Criado em</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.name, school %></td>
        <td><%= school.owner_email %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= students_per_school(school) %></td>
        <td><%= l(school.created_at) %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Editar', edit_school_path(school), class: 'btn btn-sm btn-default' %>
            <%= link_to 'Apagar', school_path(school), method: :delete, class: 'btn btn-sm btn-danger' %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
