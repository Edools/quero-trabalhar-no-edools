<p id="notice"><%= notice %></p>

<h1>Escolas</h1>
<div class="ui category search six wide column">
  <%= form_tag schools_path, method: :get do %>
    <div class="ui icon input">
      <%= text_field_tag :school_name, params[:school_name], class: 'prompt', placeholder: 'Buscar escola...' %>
    </div>
    <%= submit_tag "Buscar", class: 'primary ui button'%>
    <%= link_to 'Nova Escola', new_school_path, class: 'teal ui right floated button' %>
  <% end %>
</div>

<table class="ui celled striped table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Pitch</th>
      <th>Subdomínio</th>
      <th>Criada em</th>
      <th>Operações</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= school.created_at %></td>
        <td>
          <%= link_to 'cursos', school_courses_path(school), class: 'primary ui button' %>
          <%= link_to 'Editar', edit_school_path(school), class: 'yellow ui button' %>
          <%= link_to 'Remover', school, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'red ui button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

