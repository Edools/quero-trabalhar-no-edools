<p id="notice"><%= notice %></p>

<h3>Schools</h3>

<div class="clearfix mb-3">
  <%= link_to 'New School', new_school_path, class: 'btn btn-primary float-right' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Pitch</th>
      <th scope="col">Owner Email</th>
      <th scope="col">Subdomain</th>
      <th scope="col">Created at</th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.id %></td>
        <td><%= link_to school.name, school_path(school) %></td>
        <td><%= link_to 'â–º Watch pitch', school.pitch, target: 'blank' %></td>
        <td><%= school.owner_email %></td>
        <td><%= school.subdomain %></td>
        <td><%= school.created_at.to_formatted_s(:short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
