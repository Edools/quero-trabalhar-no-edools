<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<%= form_tag(seach_name_schools_path, method: "get", remote: true) do %>
  <%= label_tag(:name, "Buscar por nome:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
<% end %>

<ol id='matches_list'>
</ol>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner email</th>
      <th>Pitch</th>
      <th>Subdomain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.owner_email %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
