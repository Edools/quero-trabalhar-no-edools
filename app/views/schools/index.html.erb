<p id="notice"><%= notice %></p>

<h1>Escolas</h1>

<%= link_to 'Nova Escola', new_school_path, class: 'teal ui button' %>
<table class="ui celled striped table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Pitch</th>
      <th>Subdomínio</th>
      <th>Criada em</th>
      <th>Operações</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= school.created_at %></td>
        <td>
          <%= link_to 'Visualizar', school, class: 'primary ui button' %>
          <%= link_to 'Editar', edit_school_path(school), class: 'yellow ui button' %>
          <%= link_to 'Remover', school, method: :delete, data: { confirm: 'Are you sure?' }, class: 'red ui button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

