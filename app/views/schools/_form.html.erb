<div class="medium-6 medium-offset-3">
  <%= simple_form_for @school do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :owner_email %>
      <%= f.input :pitch %>
      <%= f.input :subdomain %>  
    </div>
  
    <div class="form-actions">
      <%= f.button :submit,  t('save') %>
    </div>
  <% end %>
</div>