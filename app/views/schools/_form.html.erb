<%= form_for @school, :html => { :class => "form-horizontal school" } do |f| %>

  <% if @school.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @school.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :owner_email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :owner_email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:owner_email) %>
  </div>
  <div class="form-group">
    <%= f.label :pitch, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pitch, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pitch) %>
  </div>
  <div class="form-group">
    <%= f.label :subdomain, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subdomain, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subdomain) %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_creation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_of_creation, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_of_creation) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schools_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
