<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col">
		<div class="mdl-card mdl-shadow--2dp demo-card-square-course">
		  <div class="mdl-card__title mdl-card--expand">
		  	<%= image_tag "school.jpg", width: "250px", style: "margin:20px" %>  	    
		  </div>
		  <div class="mdl-card__supporting-text">
		  	<h4>Escola : <%= @school.name %></h4>
		  	<br/>
		  	<strong>Email :</strong> <%= @school.email %>
        <br/>
		  	<strong>Pitch :</strong> <%= @school.pitch %>
        <br/>
		  	<strong>Subdom√≠nio :</strong> <%= @school.subdomain %>
		  </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to "Cursos Cadastrados", courses_path(school_id: @school.id), 
              method: :get, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
		  </div>
		</div>
  </div>
</div>