<div id="access">
  <div class="login">
    <div class="container">
    <h2 class="text-center">The Challenge</h2>
    <h3 class="text-center">Login</h3>

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">            
            <%= f.email_field :email, autofocus: true, placeholder: 'E-mail' , class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit "Login", class: 'btn btn-info btn-block btn-lg' %>
          </div>
        <% end %>
      </div> <!-- END-col-md-4-->
    </div><!-- END-row-->
    <div class="get-signup"> Ainda não é cadastrado? <%= link_to "Sign up", new_registration_path(resource_name) %>
    <%#= render "users/shared/links" %>
  </div> <!-- END-container -->
  </div> <!-- END-Login -->
</div> <!-- END-Access -->s