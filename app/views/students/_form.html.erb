<% if @student.errors.any? %>
<div id="error_explanation" >
  <div class="ui red message">
    <div class="header">
      <%= t('forms.error_message') %>
    </div>
    <ul class="list">
    <% @student.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="actions">
  <div class="field">
    <label>Nome</label>
    <%= f.text_field :name, placeholder: 'Nome do aluno' %>
  </div>
  <div class="field">
    <label>Registro</label>
    <%= f.text_field :register_number, placeholder: 'Numero do registro' %>
  </div>
  <div class="field">
    <label>Status</label>
    <%= f.select :status, Student.statuses_to_select %>
  </div>
  <%= f.submit 'Salvar', class: 'teal ui left floated button' %>
  <%= link_to 'Voltar', students_path, class: 'primary ui left floated button' %>
</div>
