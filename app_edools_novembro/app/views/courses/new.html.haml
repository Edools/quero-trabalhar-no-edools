%h2 Novo Curso

= simple_form_for @course, :url => new_user_school_course_path(current_user, @school) do |f|
  -if @course.errors.any?
    #error_explanation
      %h2
        = pluralize(@course.errors.count, "erro")
        no preenchimento
      %ul
        - @course.errors.full_messages.each do |message|
          %li= message

  = render "courses/form", f: f

= link_to "Voltar", user_school_path(current_user, @school)
