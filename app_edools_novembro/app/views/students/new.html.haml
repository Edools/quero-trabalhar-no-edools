%h2 Novo Aluno

= simple_form_for @student, :url => new_user_school_course_student_path(current_user, @school, @course) do |f|
  -if @student.errors.any?
    #error_explanation
      %h2
        = pluralize(@student.errors.count, "erro")
        no preenchimento
      %ul
        - @student.errors.full_messages.each do |message|
          %li= message

  = render "students/form", f: f

= link_to "Voltar", user_school_course_path(current_user, @school.id, @course.id)
