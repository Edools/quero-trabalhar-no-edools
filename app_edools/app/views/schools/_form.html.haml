= simple_form_for @school do |f|
  -if @school.errors.any?
    #error_explanation
      %h2
        = pluralize(@school.errors.count, "error")
        itens preenchidos erroneamente ou em branco
      %ul
        - @school.errors.full_messages.each do |message|
          %li= message

  = f.input :name, label: "Nome"
  = f.input :email_responsible, label: "Email"
  = f.input :pitch, label: "Pitch"
  = f.input :subdomain, label: "Subdominio"
  = f.button :submit
