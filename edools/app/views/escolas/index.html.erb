<%= render 'shared/notice' %>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8 pull-left">
        <%= link_to t('actions.back'), root_path, class: 'btn btn-default' %>
        <%= link_to t('actions.new'), new_escola_path, class: 'btn btn-primary' %>
      </div>
      <div class="col-md-4">
        <div class="pull-right">
          <%= form_for search_escola_path, method: :get do |f| %>
            <div class="input-group">
              <%= text_field_tag :q, params[:q], class: 'form-control' %>
              <div class="input-group-btn">
                <%= submit_tag t('actions.search'), name: nil, class: 'btn btn-default' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<h1>Listing Escolas</h1>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th> <%= t('activerecord.attributes.escola.nome') %></th>
          <th><%= t('activerecord.attributes.escola.email') %></th>
          <th><%= t('activerecord.attributes.escola.data_criacao') %></th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @escolas.each do |escola| %>
          <tr>
            <td><%= escola.nome %></td>
            <td><%= escola.email %></td>
            <td><%= escola.data_criacao %></td>
            <td><%= link_to t('actions.show'), escola %></td>
            <td><%= link_to t('actions.edit'), edit_escola_path(escola) %></td>
            <td><%= link_to t('actions.remove'), escola, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
