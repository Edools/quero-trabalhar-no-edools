<%= render 'shared/notice' %>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8 pull-left">
        <%= link_to t('actions.back'), relatorios_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
<h1><%= t('menu.cursos') %></h1>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @escola.cursos.each do |curso| %>
            <tr>
              <td><%= curso.titulo %></td>
              <td><%= link_to t('actions.show'), curso %></td>
              <td><%= link_to t('actions.edit'), edit_curso_path(curso) %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
