<div class="row">
    <div class="col-sm-12">
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
      <%= form_tag("/schools/#{@school.id}/courses", method: "get", class: "navbar-form navbar-left", role: "search") do%>
          <div class="form-group">
            <%= text_field_tag "search", nil, placeholder: "Título", class: "form-control" %>
          </div>
          <%= submit_tag("Pesquisar", class: "btn btn-default") %>
          <%= link_to 'Adicionar', new_school_course_path(@school), class: "btn btn-primary" %>
      <% end %>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped">
            <tr>
                <th>Título</th>
                <th></th>
            </tr>

            <% @courses.each do |course| %>
            <tr>
                <td><%= course.title %></td>
                <td class="col-sm-3 right">
                  <%= link_to management_school_course_path(@school, course), class: "btn btn-default" do%>
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Alunos
                  <% end %>
                  <div class="btn-group">
                    <%= link_to edit_school_course_path(@school, course), class: "btn btn-default" do%>
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <% end %>
                    <%= link_to school_course_path(@school, course), class: "btn btn-default", method: :delete, data: { confirm: 'Tem certeza de que deseja excluir?' } do%>
                      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    <% end %>
                    <%= link_to school_course_path(@school, course), class: "btn btn-default" do%>
                      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    <% end %>
                  </div>
                </td>
            </tr>
            <% end %>
        </table>
    </div>
</div>
