<h1><%= @school.name %> - <%= @course.title %></h1>

<% if flash[:notice] != nil %>
<div class="row">
    <div class="col-sm-12">
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= flash[:notice] %>
        </div>
    </div>
</div>
<% end %>


<div class="row">
  <div class="col-sm-12">
    <p><strong>Descrição</strong></p>
    <p><%= @course.description %></p>

    <p><strong>Conteúdo</strong></p>
    <p><%= @course.content %></p>

    <p><strong>Duração</strong></p>
    <p><%= @course.duration %></p>

    <p><strong>Price</strong></p>
    <p><%= number_to_currency(@course.price, locale: :"pt-BR") %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to edit_school_course_path(@school, @course), class: "btn btn-default" do%>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
    <% end %>
    <%= link_to school_course_path(@school, @course), class: "btn btn-default", method: :delete, data: { confirm: 'Tem certeza de que deseja excluir?' } do%>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Excluir
    <% end %>
  </div>
</div>
