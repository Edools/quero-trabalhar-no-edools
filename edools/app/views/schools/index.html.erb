<h1 class="ls-title-intro ls-ico-home">Schools</h1>

<a href="<%= new_school_path %>" class="ls-btn-primary">Create</a>

<table class="ls-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner Email</th>
      <th>Pitch</th>
      <th>Subdomain</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.owner_email %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= school.created_at.to_date %></td>
        <td>
          <%= link_to 'Edit', edit_school_path(school), class: 'ls-btn-primary ls-btn-xs' %>
          <%= link_to 'Delete', school_path(school), method: :delete, class: 'ls-btn-primary-danger ls-btn-xs', data: { confirm: 'Are you sure?' }  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
