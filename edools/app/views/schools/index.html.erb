<h1>Escolas</h1>

<div class="row">
    <div class="col-sm-12">
        <%= link_to 'Adicionar', new_school_path, class: "btn btn-default btn-lg" %>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped">
            <tr>
                <th>Nome</th>
                <th></th>
            </tr>

            <% @schools.each do |school| %>
            <tr>
                <td><%= school.name %></td>
                <td class="col-sm-3">
                  <div class="btn-group">
                    <%= link_to "Cursos", school_courses_path(school), class: "btn btn-default"%>
                    <%= link_to "Alunos", new_school_student_path(school), class: "btn btn-default"%>
                    <%= link_to edit_school_path(school), class: "btn btn-default" do%>
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <% end %>
                    <%= link_to school_path(school), class: "btn btn-default", method: :delete, data: { confirm: 'Tem certeza de que deseja excluir?' } do%>
                      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    <% end %>
                  </div>
                </td>
            </tr>
            <% end %>
        </table>
    </div>
</div>
