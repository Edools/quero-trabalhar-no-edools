<h1 class="ls-title-intro ls-ico-home">Schools</h1>

<div class="row">
  <div class="ls-box-filter">
    <form role="form" action="<%= schools_path %>" class="ls-form ls-form-inline">
      <div class="col-md-1">
        <a href="<%= new_school_path %>" class="ls-btn-primary">Create</a>
      </div>

      <label class="ls-label col-md-3 col-sm-4">
        <input type="text" name="keywords" placeholder="Search Courses..">
      </label>

      <div class="ls-actions-btn">
        <button type="submit" class="ls-btn">Search</button>
      </div>

      <div class="ls-actions-btn">
        <a href="<%= schools_path %>" class="ls-btn-primary-grey">Show All</a>
      </div>
    </form>
  </div>
</div>

<table class="ls-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner Email</th>
      <th>Pitch</th>
      <th>Subdomain</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.owner_email %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= school.created_at.to_date %></td>
        <td>
          <%= link_to 'Edit', edit_school_path(school), class: 'ls-btn-primary ls-btn-xs' %>
          <%= link_to 'Delete', school_path(school), method: :delete, class: 'ls-btn-primary-danger ls-btn-xs', data: { confirm: 'Are you sure?' }  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
