<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Listar Escolas</h1>
</div>
  <%= link_to 'Nova Escola', new_school_path, class: "btn btn-primary btn-sm pull-right" %>
  <%= form_tag schools_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] , placeholder: "buscar por nome"%>
      <%= submit_tag "buscar", :name => nil, class: "btn btn-warning btn-xs" %>
  <% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Subdomain</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.email %></td>
        <td><%= school.subdomain %>
        <td class="pull-right">
          <%= link_to 'exibir', school , class: "btn btn-info btn-sm"%>
          <%= link_to 'editar', edit_school_path(school), class: "btn btn-info btn-sm" %>
          <%= link_to 'deletar', school, class: "btn btn-info btn-sm" ,method: :delete, data: { confirm: 'Quer deletar?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
