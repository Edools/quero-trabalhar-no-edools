<h1><%= t('.title') %></h1>
<p>
    <%= link_to "New School", new_school_path, :class => "label label-primary" %>
</p>
<% unless @schools.empty? %>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Owner Email</th>
        <th>Creation Date</th>
        <th></th>
    </tr>
    <% @schools.each do |school| %>
    <tr>
        <td><%= school.id %></td>
        <td><%= school.name %></td>
        <td><%= school.owner_email %></td>
        <td><%= school.created_at %></td>
        <td>
            <%= link_to "Show", school_path(school.id), :class => "label label-default" %>
            <%= link_to "Edit", edit_school_path(school.id), :class => "label label-default" %>
            <%= link_to "Delete", school_path(school.id), method: :delete, :class => "label label-danger" %>
        </td>
    </tr>
    <% end %>
</table>
<% else %>
    <h2>There is no schools registered yet.</h2>
<% end %>