<h1><%= t('.title') %></h1>

<table class="table">
    <tr>
        <th>Id</th>
        <td><%= @school.id %></td>
    <tr>
        <th>Name</th>
        <td><%= @school.name %></td>
    </tr>
    <tr>
        <th>Owner Email</th>
        <td><%= @school.owner_email %></td>
    </tr>
    <tr>
        <th>Pitch</th>
        <td><%= @school.pitch %></td>
    </tr>
    <tr>
        <th>Subdomain</th>
        <td><%= @school.subdomain %></td>
    </tr>
    <tr>
        <th>Creation Date</th>
        <td><%= @school.created_at %></td>
    </tr> 
</table>

<h2>Courses</h2>
<p>
    <%= link_to "New course", 
            new_school_course_path(:school_id => @school.id), 
            :class => "label label-primary" %> 
</p>
<% unless @school.courses.empty? %>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Active students</th>
        <th></th>
    </tr>
    <% @school.courses.each do |course| %>
    <tr>
        <td><%= course.id %></td>
        <td><%= course.title %></td>
        <td><%= course.enrolls.count %></td>
        <td>
        <%= link_to "Edit", edit_school_course_path(:school_id => @school.id, :id => course.id), :class => "label label-default" %>
        <%= link_to "Delete", school_course_path(:school_id => @school.id, :id => course.id), method: :delete, :class => "label label-danger" %>
        </td>
   </tr>
   <% end %>
</table>
<% else %>
    <h3>There is no avaliable courses for this school.</h3>
<% end %>