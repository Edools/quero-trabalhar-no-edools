<h1><%= @school.name %></h1>

<% if flash[:notice] != nil %>
<div class="row">
    <div class="col-sm-12">
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= flash[:notice] %>
        </div>
    </div>
</div>
<% end %>

<div class="row">
    <div class="col-sm-12">

        <p><strong>Subdom√≠nio</strong></p>
        <p><%= @school.subdomain %></p>

        <p><strong>Email do dono</strong></p>
        <p><%= @school.owner_email %></p>

        <p><strong>Pitch</strong></p>
        <p><%= @school.pitch %></p>

    </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to edit_school_path(@school), class: "btn btn-default" do%>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
    <% end %>
    <%= link_to school_path(@school), class: "btn btn-default", method: :delete, data: { confirm: 'Tem certeza de que deseja excluir?' } do%>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Excluir
    <% end %>
  </div>
</div>
