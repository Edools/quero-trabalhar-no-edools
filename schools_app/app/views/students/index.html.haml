- provide(:title, 'Alunos')

.row.search
  .col-lg-6
    .input-group
      %input.form-control{ placeholder: 'Buscar Aluno...', type: 'text' }
      %span.input-group-btn
        %button.btn.btn-default{ type: 'button' }
          %span.glyphicon.glyphicon-search{ 'aria-hidden' => 'true' }
  .col-lg-4.col-lg-offset-2.text-right
    = link_to 'Novo Aluno', new_student_path, class: 'btn btn-sm btn-success'

.panel.panel-default
  .panel-heading
  .panel-body
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Nome
            %th E-mail
            %th

        %tbody
          - @students.each do |student|
            %tr
              %td
                = student.id
              %td
                = truncate(student.name, length: 20)
              %td
                = truncate(student.email, length: 20)
              %td.td-buttons.text-center
                = link_to 'Editar', edit_student_path(student), class: 'btn btn-sm btn-warning'
