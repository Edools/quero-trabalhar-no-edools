<h1><%= I18n.t('schools.list') %></h1>

<%= link_to I18n.t('defaults.new'), new_school_path, class: 'btn btn-success' %>

<%= form_tag(schools_path, method: :get, class: 'float-right') do %>
  <%= text_field_tag :name, nil, placeholder: School.human_attribute_name(:name) %>
  <%= submit_tag(I18n.t('defaults.search'), class: 'btn-sm btn-primary') %>
<% end %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= School.human_attribute_name(:name) %></th>
      <th><%= School.human_attribute_name(:pitch) %></th>
      <th><%= School.human_attribute_name(:subdomain) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.pitch %></td>
        <td><%= school.subdomain %></td>
        <td><%= link_to I18n.t('defaults.show'), school %></td>
        <td><%= link_to I18n.t('defaults.edit'), edit_school_path(school) %></td>
        <td><%= link_to I18n.t('defaults.delete'), school, method: :delete, data: { confirm: I18n.t('defaults.confirm_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
