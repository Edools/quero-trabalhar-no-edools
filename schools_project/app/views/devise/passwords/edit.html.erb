<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-auth' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <h1 class="h3 mb-3 font-weight-normal"><%= I18n.t('devise.forgot_password') %></h1>

  <div class="field">
    <%= f.label :password, I18n.t('devise.password') %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= I18n.t('devise.password_minimum') %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control mb-3' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, I18n.t('devise.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control mb-3' %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t('defaults.save'), class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
