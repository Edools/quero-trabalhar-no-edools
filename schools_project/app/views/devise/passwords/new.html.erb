<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-auth' }) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal"><%= I18n.t('devise.forgot_password') %></h1>

  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3' %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t('devise.send_instructions'), class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
