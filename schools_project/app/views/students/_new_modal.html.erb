<div class="modal" id="studentModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(model: Student.new, local: true) do |form| %>
        <div class="modal-header">
          <h4 class="modal-title"><%= I18n.t('students.new') %></h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= form.label :course_id %>
            <%= form.select :course_id, current_user.courses.collect { |s| [ s.title, s.id ] }, {}, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', required: true %>
          </div>

          <div class="actions">
          </div>
        </div>

        <div class="modal-footer">
          <%= form.submit I18n.t('defaults.save'), class: 'btn btn-primary' %>

          <button type="button" class="btn btn-danger" data-dismiss="modal">
            <%= I18n.t('defaults.close') %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
